<PlayersList>:
    name: "PlayersList"
    MDBoxLayout:
        orientation: "vertical"

        MyTopAppBar:
            title: "FIND A PLAYER"

        MDBoxLayout:
            padding: dp(25)
            spacing: 20
            padding: 35
            orientation: "vertical"

            MDScrollView:
                id: player_scroll
                size_hint: (1, .55)
                MDList:
                    id: players_list


            MDGridLayout:
                cols: 2
                size_hint: (.9, .3)
                pos_hint: {"center_x": .5}
                spacing: 10

                MDLabel:
                    text_color: MainPurple
                    size_hint: (None, None)
                    size: (130, 50)
                    pos_hint: {"x":0}
                    valign: "top"
                    halign: "center"
                    theme_text_color: "Custom"
                    font_style: "Body1"
                    text: "ID"

                MDTextField:
                    id: search_id
                    size_hint: (None, None)
                    pos_hint: {"center_x": .7}
                    size: (200, 50)
                    font_size: 16
                    icon_right: "account"
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (130, 50)
                    halign: "center"
                    valign: "center"
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    font_style: "Body1"
                    pos_hint: {"x":0}
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    text: "NAME"

                MDTextField:
                    id: search_name
                    size_hint: (None, None)
                    pos_hint: {"center_x": .5}
                    size: (200, 50)
                    font_size: 16
                    icon_right: "account"
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (130, 50)
                    theme_text_color: "Custom"
                    halign: "center"
                    valign: "center"
                    font_style: "Body1"
                    text_color: MainPurple
                    pos_hint: {"x":0}
                    text: "SURNAME"

                MDTextField:
                    id: search_surname
                    size_hint: (None, None)
                    pos_hint: {"center_x": .5}
                    size: (200, 50)
                    font_size: 16
                    icon_right: "account"
                    line_color_normal: app.theme_cls.primary_light


            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                size_hint_x: 1
                spacing: 20
                pos_hint: {"left": 0}

                ScreenButton:
                    size_hint: (None, None)
                    width: root.width*.25
                    pos_hint: {"center_x": .5}
                    text: "Add player"
                    on_press: root.add_player(search_name.text, search_surname.text)

                ScreenButton:
                    size_hint: (None, None)
                    width: root.width*.25
                    pos_hint: {"right": 1}
                    text: "Search player"
                    on_press:
                        if any((search_id.text, search_name.text , search_surname.text)):\
                        root.feed_list(search_id.text, search_name.text , search_surname.text)

                ScreenButton:
                    size_hint: (None, None)
                    width: root.width*.25
                    pos_hint: {"center_x": .5}
                    text: "Delete player"
                    on_press:
                        root.show_alert_dialog_deletion()

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                size_hint_x: .66
                pos_hint: {"right": 1}
                spacing: 20

                ScreenButton:
                    size_hint: (None, None)
                    width: root.width * .25
                    pos_hint: {"center_x": .5}
                    text: "Reset filter"
                    on_press:
                        root.clear_texts()
                        root.feed_list()

                ScreenButton:
                    size_hint: (None, None)
                    width: root.width * .25
                    pos_hint: {"right": 1}
                    text: "Back"
                    on_press:
                        root.manager.current = "MainPage"
                        root.manager.transition.direction = "right"


