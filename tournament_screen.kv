<TournamentScreen>:
    name: "TournamentScreen"
    BoxLayout:
        orientation: "vertical"
        MyTopAppBar:
            title: "TOURNAMENT INFOS"

        BoxLayout:
            padding: 35
            spacing: 25
            orientation: "vertical"
            TitleLabel:
                id: tournament_page_name
                adaptive_height: True
                text: "Tournament's name"
                pos_hint: {"center_x": .5}
                font: "M6"
                font_size: "32sp"
                halign: "center"
                valign: "top"

            MDBoxLayout:
                adaptive_height: True
                orientation: "horizontal"
                spacing: 30

                MyButton:
                    size_hint_x: .3
                    pos_hint: {"left": 0}
                    text:"Standings"
                MyButton:
                    size_hint_x: .3
                    pos_hint: {"center_x": .5}
                    text: "Players"
                    on_release:
                        root.open_players_table()

            MDBoxLayout:
                adaptive_height: True
                orientation: "horizontal"
                spacing: 30
                MyButton:
                    size_hint_x: .3
                    pos_hint: {"right": 1}
                    text: "Add player"
                    on_release:
                        root.manager.current = "PlayersList"
                        root.manager.transition.direction = "right"

                MyButton:
                    size_hint_x: .3
                    pos_hint: {"right": 1}
                    text: "Next round"

            MDScrollView:
                adaptive_height: True
                MDList:
                    id: rounds_list

            ScreenButton:
                adaptive_height: True
                text: "Back"
                on_press:
                    root.manager.current = "TourneyList"
                    root.manager.transition.direction = "left"



