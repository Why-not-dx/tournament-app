#add pop up for buttons pressed

<NewTourney>:
    name: "NewTourney"
    BoxLayout:
        orientation: "vertical"
        MyTopAppBar:
            title: "NEW TOURNAMENT"

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(25)
            spacing: dp(30)

            MDBoxLayout:
                padding: dp(25)
                spacing: dp(25)
                size_hint_y: .5

                TitleLabel:
                    pos_hint: {"center_y": .5}
                    text: "CREATE A NEW TOURNAMENT"
                    font_style: "H4"

            MDGridLayout:
                cols: 2
                size_hint: (.9, .3)
                pos_hint: {"center_x": .5}

                MDLabel:
                    size_hint: (.3, 1)
                    text: "NAME"
                    valign: "top"
                    halign: "center"
                    font_style: "H6"
                    pos_hint: {"top": 0}
                    theme_text_color: "Custom"
                    text_color: MainPurple

                MDTextField:
                    adaptive_height: True
                    id: new_tourney_name
                    size_hint_x: .7
                    pos_hint: {"center_x": .5}
                    icon_right: "account"
                    halign: "left"
                    line_color_normal: app.theme_cls.primary_light


                MDLabel:
                    size_hint: (.3, 1)
                    pos_hint: {"top": 0}
                    valign: "top"
                    halign: "center"
                    text: "FORMAT"
                    font: "H6"
                    theme_text_color: "Custom"
                    text_color: MainPurple

                MDTextField:
                    adaptive_height: True
                    id: new_tourney_format
                    size_hint_x: .7
                    pos_hint: {"center_x": .5}
                    icon_right: "arch"
                    line_color_normal: app.theme_cls.primary_light


                MDLabel:
                    size_hint: (.3, 1)
                    pos_hint: {"top": 0}
                    valign: "top"
                    halign: "center"
                    text: "DATE"
                    font: "H6"
                    theme_text_color: "Custom"
                    text_color: MainPurple

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (.3, 1)

                    MDLabel:
                        id: search_tourney_date
                        size_int: (None, None)
                        size: (new_tourney_format.width *.5, new_tourney_format.height*.6)
                        halign: "center"
                        valign: "center"
                        font_style: "H6"
                        theme_text_color: "Custom"
                        text_color: MainPurple
                        text: ""

                    ScreenButton:
                        id: search_tourney_date_button
                        size_int: (None, None)
                        size: (new_tourney_format.width *.5, new_tourney_format.height *.6)
                        text: "Pick a date"
                        width: root.width *.25
                        on_release: root.show_date_picker()

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                size_hint_y: .2
                spacing: dp(20)

                ScreenButton:
                    adaptive_height: True
                    size_hint_x: .7
                    spacing: dp(25)
                    pos_hint: {"x":.15}
                    text: "CREATE TOURNAMENT"
                    on_press:
                        root.create_tournament(new_tourney_name.text,new_tourney_format.text,search_tourney_date.text)

                ScreenButton:
                    adaptive_height: True
                    size_hint_x: .3
                    spacing: dp(25)
                    pos_hint: {"right":.85}
                    text: "Back"
                    on_press:
                        root.manager.current = "MainPage"
                        root.manager.transition.direction = "left"
