<TourneyList>:
    name: "TourneyList"
    MDBoxLayout:
        orientation: "vertical"

        MyTopAppBar:
            title: "YOUR TOURNAMENTS"

        MDBoxLayout:
            padding: dp(25)
            spacing: 10
            orientation: "vertical"

            MDScrollView:
                size_hint: (1, .6)
                MDList:
                    id: players_list
                    OneLineListItem:
                        text:"Josu√© ROBERT - ID: 23 "
                        theme_text_color: "Custom"
                        text_color: MainPurple

            MDGridLayout:
                cols: 2
                size_hint: (1, .3)
                pos_hint: {"top": .2}

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    size_hint: (None, None)
                    size: (100, 50)
                    font_style: "H6"
                    pos_hint: {"x":0, "bottom": 1}
                    #valign: "bottom"
                    #halign: "left"
                    text: "ID"

                MDTextField:
                    id: search_id_tourney
                    size_hint: (None, None)
                    size: (300, 50)
                    pos_hint: {"top": 0, "center_x": 1}
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (100, 50)
                    halign: 'left'
                    valign: "bottom"
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    font_style: "H6"
                    pos_hint: {"x":0}
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    text: "NAME"

                MDTextField:
                    id: search_name_tourney
                    size_hint: (None, None)
                    size: (300, 50)
                    pos_hint: {"top": 0, "center_x": .5}
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (100, 50)
                    theme_text_color: "Custom"
                    font_style: "H6"
                    halign: 'left'
                    valign: "bottom"
                    text_color: MainPurple
                    pos_hint: {"center_y": 0, "x":0}
                    text: "DATE"

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (None, None)
                    size: (300, 50)
                    spacing: 10
                    pos_hint: {"center_y": .5}


                    MDLabel:
                        id: search_tourney_date
                        size_hint: (None, None)
                        size: (180, 50)
                        pos_hint: { "center_x": .5}
                        font_style: "H6"
                        theme_text_color: "Custom"
                        text_color: (122/255, 48/255, 108/255, 1)
                        text: ""

                    MDRaisedButton:
                        id: search_tourney_date_button
                        size_hint: (None, None)
                        size: (200, 50)
                        pos_hint: {"center_y": .5, "x": .5}
                        text: "Pick a date"
                        on_release: root.show_date_picker()


            MyButton:
                size_hint: (.5, .05)
                text: "SEARCH"
                on_press:
                    #print(search_id.text, search_name.text , search_surname.text)
                    root.tourney_search()


            MyButton:
                size_hint: (.3, .05)
                text: "BACK"
                on_press:
                    root.manager.current = "MainPage"
                    root.manager.transition.direction = "right"

