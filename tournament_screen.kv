<TournamentScreen>:
    name: "TournamentScreen"
    BoxLayout:
        orientation: "vertical"
        MyTopAppBar:
            title: "TOURNAMENT INFOS"

        BoxLayout:
            padding: 20
            spacing: 25
            orientation: "vertical"
            TitleLabel:
                adaptive_height: True
                text: "Tournament's name"
                font: "M6"
                halign: "left"
                valign: "top"

            MDBoxLayout:
                adaptive_height: True
                orientation: "horizontal"
                padding: 20
                spacing: 30

                MyButton:
                    size_hint_x: .3
                    pos_hint: {"left": 0}
                    text:"Standings"
                MyButton:
                    size_hint_x: .3
                    pos_hint: {"center_x": .5}
                    text: "Players"
                MyButton:
                    size_hint_x: .3
                    pos_hint: {"right": 1}
                    text: "Next round"
                    on_release: root.tourney_search()

            MDScrollView:
                adaptive_height: True
                MDList:
                    id: rounds_list
                    OneLineListItem:
                        text:"Round 1 "
                        theme_text_color: "Custom"
                        text_color: MainPurple
                    OneLineListItem:
                        text:"Round 2 "
                        theme_text_color: "Custom"
                        text_color: MainPurple
                        on_release:
                            root.manager.current = "MainPage"
                            root.manager.transition.direction = "left"


            MyButton:
                adaptive_height: True
                text: "Back"
                on_press:
                    root.manager.current = "MainPage"
                    root.manager.transition.direction = "left"



