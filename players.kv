<PlayersList>:
    name: "PlayersList"
    MDBoxLayout:
        orientation: "vertical"

        MyTopAppBar:
            title: "FIND A PLAYER"

        MDBoxLayout:
            padding: dp(25)
            spacing: 20
            padding: 20
            orientation: "vertical"

            MDScrollView:
                size_hint: (1, .5)
                MDList:
                    id: players_list
                    OneLineListItem:
                        text:"Josu√© ROBERT - ID: 23 "
                        theme_text_color: "Custom"
                        text_color: MainPurple

            MDGridLayout:
                cols: 2
                size_hint: (1, .35)
                spacing: 7

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    size_hint: (.3, .25)
                    font_style: "H6"
                    pos_hint: {"x":0}
                    valign: "top"
                    halign: "left"
                    text: "ID"

                MDTextField:
                    id: search_id
                    size_hint: (.7, .25)
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (.3, .25)
                    halign: 'left'
                    valign: "center"
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    font_style: "H6"
                    pos_hint: {"x":0}
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    text: "NAME"

                MDTextField:
                    id: search_name
                    size_hint: (.7, .25)
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (.3, .25)
                    theme_text_color: "Custom"
                    halign: 'left'
                    valign: "center"
                    font_style: "H6"
                    text_color: MainPurple
                    pos_hint: {"x":0}
                    text: "SURNAME"

                MDTextField:
                    id: search_surname
                    size_hint: (.7, .25)
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (.3, .25)
                    theme_text_color: "Custom"
                    halign: 'left'
                    valign: "center"
                    font_style: "H6"
                    text_color: MainPurple
                    pos_hint: {"x":0}
                    text: "TOURNAMENT ID"

                MDTextField:
                    id: search_t_id
                    size_hint: (.7, .25)
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light


            MyButton:
                size_hint: (.5, .075)
                text: "SEARCH"
                on_press:
                    #print(search_id.text, search_name.text , search_surname.text)
                    root.feed_list()

            MyButton:
                size_hint: (.3, .075)
                text: "BACK"
                on_press:
                    root.manager.current = "MainPage"
                    root.manager.transition.direction = "right"
