#add pop up for buttons pressed

<NewTourney>:
    name: "NewTourney"
    BoxLayout:
        orientation: "vertical"
        MyTopAppBar:
            title: "NEW TOURNAMENT"

        MDBoxLayout:
            orientation: "vertical"
            padding: dp(25)
            spacing: dp(30)

            MDBoxLayout:
                padding: dp(25)
                spacing: dp(25)
                size_hint_y: .5

                TitleLabel:
                    pos_hint: {"center_y": .5}
                    text: "CREATE A NEW TOURNAMENT"
                    font_style: "H4"

            MDGridLayout:
                cols: 2
                spacing: 15
                size_hint: (.9, .4)
                pos_hint: {"center_x": .5}

                MDLabel:
                    text: "NAME"
                    valign: "top"
                    halign: "left"
                    font_style: "H6"
                    size_hint: (None,None)
                    size: (100, 50)
                    theme_text_color: "Custom"
                    text_color: MainPurple

                MDTextField:
                    adaptive_height: True
                    id: new_tourney_name
                    size_hint_x: .7
                    pos_hint: {"center_x": .5}
                    icon_right: "account"
                    halign: "left"
                    line_color_normal: app.theme_cls.primary_light


                MDLabel:
                    size_hint: (None,None)
                    size: (100, 50)
                    pos_hint: {"center_x":.5}
                    valign: "top"
                    halign: "left"
                    text: "FORMAT"
                    font: "H6"
                    theme_text_color: "Custom"
                    text_color: MainPurple

                MDTextField:
                    adaptive_height: True
                    id: new_tourney_format
                    size_hint_x: .7
                    pos_hint: {"center_x": .5}
                    icon_right: "arch"
                    line_color_normal: app.theme_cls.primary_light


                MDLabel:
                    size_hint: (None,None)
                    size: (100, 110)
                    pos_hint: {"center_y":.2}
                    valign: "center"
                    halign: "left"
                    text: "DATE"
                    font: "H6"
                    theme_text_color: "Custom"
                    text_color: MainPurple

                BoxLayout:
                    orientation: "vertical"
                    size_hint: (None,None)
                    size: (100, 110)
                    size_hint_x: .7
                    spacing: 10
                    padding: 10
                    pos_hint: {"center_y": .5, "left": 0}


                    ScreenButton:
                        id: search_tourney_date_button
                        text: "Pick a date"
                        size_hint: (1, .5)
                        pos_hint: {"right": 1, "center_y": .5}
                        on_release: root.show_date_picker()

                    MDLabel:
                        id: search_tourney_date
                        size_hint: (None,None)
                        size: (100, 50)
                        halign: "center"
                        valign: "center"
                        font_style: "H6"
                        theme_text_color: "Custom"
                        text_color: MainPurple
                        text: ""

            MDBoxLayout:
                adaptive_height: True
                orientation: "vertical"
                size_hint_y: .1
                spacing: dp(25)

                ScreenButton:
                    size_hint_x: .7
                    spacing: dp(25)
                    pos_hint: {"x":.15}
                    text: "CREATE TOURNAMENT"
                    on_press:
                        root.create_tournament(new_tourney_name.text,new_tourney_format.text,search_tourney_date.text)

                ScreenButton:
                    size_hint_x: .3
                    spacing: dp(25)
                    pos_hint: {"right":.85}
                    text: "Back"
                    on_press:
                        root.manager.current = "MainPage"
                        root.manager.transition.direction = "left"
