<TourneyList>:
    name: "TourneyList"
    MDBoxLayout:
        orientation: "vertical"

        MyTopAppBar:
            title: "YOUR TOURNAMENTS"

        MDBoxLayout:
            padding: dp(25)
            spacing: 10
            orientation: "vertical"

            MDScrollView:
                size_hint: (1, .5)
                MDList:
                    id: tourney_list


            MDGridLayout:
                cols: 2
                size_hint: (.9, .3)
                pos_hint: {"center_x": .5}
                spacing: 10
                padding: 20

                MDLabel:
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    size_hint: (None, None)
                    size: (100, 50)
                    font_style: "H6"
                    pos_hint: {"x":0, "bottom": 1}
                    valign: "center"
                    halign: "center"
                    text: "ID"

                MDTextField:
                    id: search_id_tourney
                    size_hint: (None, None)
                    size: (300, 50)
                    pos_hint: {"top": 0, "center_x": 1}
                    icon_right: "key"
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (100, 50)
                    halign: 'center'
                    valign: "center"
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    font_style: "H6"
                    pos_hint: {"x":0}
                    theme_text_color: "Custom"
                    text_color: MainPurple
                    text: "NAME"

                MDTextField:
                    id: search_name_tourney
                    size_hint: (None, None)
                    size: (300, 50)
                    pos_hint: {"top": 0, "center_x": .5}
                    icon_right: "tournament"
                    font_size: 16
                    line_color_normal: app.theme_cls.primary_light

                MDLabel:
                    size_hint: (None, None)
                    size: (100, 50)
                    theme_text_color: "Custom"
                    font_style: "H6"
                    halign: 'center'
                    valign: "center"
                    text_color: MainPurple
                    pos_hint: {"center_y": 0, "x":0}
                    text: "DATE"

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: (None, None)
                    size: (300, 50)
                    spacing: 10
                    pos_hint: {"center_y": .5}


                    MDLabel:
                        id: search_tourney_date
                        size_hint: (None, None)
                        size: (180, 50)
                        pos_hint: { "center_x": .5}
                        font_style: "H6"
                        theme_text_color: "Custom"
                        text_color: (122/255, 48/255, 108/255, 1)
                        text: ""

                    ScreenButton:
                        id: search_tourney_date_button
                        size_hint: (None, None)
                        size: (200, 50)
                        pos_hint: {"center_y": .5, "x": .5}
                        md_bg_color: app.theme_cls.accent_color
                        text: "Pick a date"
                        on_release: root.show_date_picker()


            MDBoxLayout:
                orientation: "horizontal"
                size_hint: (.9, .1)
                spacing: 20
                padding: 10
                pos_hint: {"center_y": .5, "center_x": .5}


                ScreenButton:
                    size_hint: (.5, 1)
                    text: "DELETE SELECTED"
                    md_bg_color: app.theme_cls.accent_color
                    on_press:
                        root.show_alert_dialog_deletion()

                ScreenButton:
                    size_hint: (.5, 1)
                    md_bg_color: app.theme_cls.accent_color
                    text: "SEARCH"
                    on_press:
                        root.feed_list(search_id_tourney.text, search_tourney_date.text, search_name_tourney.text )

            MDBoxLayout:
                orientation: "horizontal"
                size_hint: (.9, .1)
                spacing: 25
                padding: 10
                pos_hint: {"center_y": .5, "right": .95}


                ScreenButton:
                    size_hint: (.5, 1)
                    text: "CLEAR SEARCH"
                    md_bg_color: app.theme_cls.accent_color
                    on_press:
                        search_id_tourney.text = ""
                        search_tourney_date.text = ""
                        search_name_tourney.text = ""
                        root.feed_list()

                ScreenButton:
                    size_hint: (.5, 1)
                    text: "BACK"
                    md_bg_color: app.theme_cls.accent_color
                    on_press:
                        root.manager.current = "MainPage"
                        root.manager.transition.direction = "left"

